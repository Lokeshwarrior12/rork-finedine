ARG GO_VERSION=1.24
FROM golang:${GO_VERSION}-bookworm AS builder

WORKDIR /app

# Build context = backend/, so go.mod is at backend/go.mod
COPY backend/go.mod backend/go.sum ./

RUN go mod tidy

COPY backend/ ./

RUN go mod tidy

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /run-app ./cmd


FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /run-app /run-app

EXPOSE 8080

CMD ["/run-app"]
