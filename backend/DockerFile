ARG GO_VERSION=1.22
FROM golang:${GO_VERSION}-bookworm AS builder

WORKDIR /usr/src/app

COPY go.mod go.sum ./
RUN go mod download
RUN go mod tidy || true
RUN go mod verify || true

COPY . .

# Fix package conflict: firebase.go is 'package backend', main.go is 'package main'
# Move firebase.go into its own sub-package
RUN mkdir -p internal/firebase && \
    cp firebase.go internal/firebase/firebase.go && \
    sed -i 's/^package backend/package firebase/' internal/firebase/firebase.go && \
    rm firebase.go

# Re-tidy after structural change
RUN go mod tidy

RUN go build -v -o /run-app .


FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /run-app /usr/local/bin/run-app

EXPOSE 8080

CMD ["run-app"]
